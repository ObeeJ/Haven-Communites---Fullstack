# ============================================
# DEVELOPMENT ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and update values

# ============================================
# API CONFIGURATION
# ============================================

# Backend API URL (Golang Fiber)
VITE_API_BASE_URL=http://localhost:8101

# Use Mock API for frontend testing without backend
# Set to true to use mock data, false when backend is ready
VITE_USE_MOCK_API=true

# ============================================
# SUPABASE CONFIGURATION (Image Storage)
# ============================================

# Supabase project URL
VITE_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (public)
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase bucket name for images
VITE_SUPABASE_BUCKET=property-images

# ============================================
# BREVO CONFIGURATION (Newsletter)
# ============================================
# Note: Backend handles Brevo API key, not frontend

# Brevo list ID for newsletter
VITE_BREVO_LIST_ID=your-list-id

# ============================================
# APP CONFIGURATION
# ============================================

# App name
VITE_APP_NAME=Haven Communities

# App description
VITE_APP_DESCRIPTION=Your dream home awaits

# ============================================
# FEATURE FLAGS
# ============================================

# Enable debug mode
VITE_DEBUG=false

# Enable analytics
VITE_ANALYTICS=false
